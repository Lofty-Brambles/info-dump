---
import { websiteURLs } from "@config";
---

<footer>
	<strong>Might interest you:</strong>
	<a href={`${websiteURLs.current()}/about`}>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="24"
			height="24"
			viewBox="0 0 24 24"
			fill="none"
			stroke="currentColor"
			stroke-width="2"
			stroke-linecap="round"
			stroke-linejoin="round"
		>
			<path
				d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
			>
			</path>
		</svg>
		About the author!
	</a>
	<a href={`${websiteURLs.current()}/rss.xml`}>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="24"
			height="24"
			viewBox="0 0 24 24"
			fill="none"
			stroke="currentColor"
			stroke-width="2"
			stroke-linecap="round"
			stroke-linejoin="round"
		>
			<path d="M4 11a9 9 0 0 1 9 9"></path><path
				d="M4 4a16 16 0 0 1 16 16"
			>
			</path><circle cx="5" cy="19" r="1"></circle>
		</svg>Connect to the feed!
	</a>
</footer>

<style lang="scss">
	@use "src/lib/styles-addn/func" as f;
	@use "src/lib/styles-addn/vars" as v;

	footer {
		box-sizing: border-box;
		position: relative;
		width: calc(100% - 4rem);

		margin: 0 2rem 2rem 2rem;
		padding: 1.5rem;
		border: 1px var(--elementary) solid;
		border-radius: 0.5rem;

		@include f.flex($just-cont: flex-start, $wrp: wrap, $gap: 1.5rem);
		background-color: var(--background-lite);
		color: var(--elementary);

		@include f.deferred-bg();

		& * {
			@include f.flex($gap: 1rem);
			font-family: v.$sans-serif;
			font-size: v.$font--1;
			line-height: normal;
		}

		& a {
			color: #00f;
		}
	}

	@include f.mq(sm, max) {
		footer {
			width: calc(100% - 2rem);
			margin: 0 1rem 2rem 1rem;
		}
	}
</style>
